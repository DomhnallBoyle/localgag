<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.Fragments.ComplexStatusFragment">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/status_profile_picture_complex"
        android:background="@drawable/circular_image"/>

    <TextView
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:id="@+id/status_username_complex"
        android:layout_alignBottom="@+id/status_profile_picture_complex"
        android:layout_alignParentTop="true"
        android:text="Username"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/status_profile_picture_complex"
        android:paddingLeft="5dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/status_image_complex"
        android:layout_below="@+id/status_profile_picture_complex"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/status_text_complex"
        android:text="Status Text"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignTop="@+id/status_image_complex"
        android:layout_alignBottom="@+id/status_image_complex"
        android:layout_toEndOf="@+id/status_image_complex"
        android:paddingLeft="5dp" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/status_upvote_complex"
        android:background="@drawable/upvote"
        android:layout_alignTop="@+id/status_text_complex"
        android:layout_alignEnd="@+id/status_username_complex" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/status_downvote_complex"
        android:background="@drawable/downvote"
        android:layout_alignStart="@+id/status_upvote_complex"
        android:layout_below="@+id/status_upvote_complex" />

    <TextView
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:id="@+id/status_comments_complex"
        android:text="Comments"
        android:textColor="#000000"
        android:textSize="20dp"
        android:drawableLeft="@drawable/messages"
        android:gravity="center_vertical"
        android:layout_below="@+id/status_downvote_complex"
        android:layout_alignEnd="@+id/status_downvote_complex"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:id="@+id/status_votes_complex"
        android:text="Votes"
        android:textColor="#000000"
        android:textSize="20dp"
        android:drawableLeft="@drawable/points"
        android:layout_below="@+id/status_downvote_complex"
        android:layout_toStartOf="@+id/status_text_complex"
        android:gravity="center_vertical"
        android:paddingLeft="5dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status_listview_complex"
        android:layout_below="@+id/status_comments_complex"
        android:layout_alignParentStart="true"
        android:background="@drawable/lines" />

</RelativeLayout>
