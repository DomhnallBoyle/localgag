<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/friends_profile_pic"
        android:background="@drawable/circular_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/friends_username"
        android:text="Username"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/friends_profile_pic"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/friends_profile_pic" />

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/friends_new_messages"
        android:text="0 New Messages"
        android:textColor="#000000"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/friends_profile_pic"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>