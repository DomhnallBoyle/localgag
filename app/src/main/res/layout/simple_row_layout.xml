<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/wall_profile_picture_simple"
        android:background="@drawable/circular_image"/>

    <TextView
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:id="@+id/wall_username_simple"
        android:layout_alignBottom="@+id/wall_profile_picture_simple"
        android:layout_alignParentTop="true"
        android:text="Username"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/wall_profile_picture_simple" />

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/wall_status_text_simple"
        android:text="Status Text"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignTop="@+id/upvote_simple"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/downvote_simple"
        android:layout_toStartOf="@+id/upvote_simple" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/upvote_simple"
        android:background="@drawable/upvote"
        android:layout_below="@+id/wall_username_simple"
        android:layout_alignEnd="@+id/wall_username_simple" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/downvote_simple"
        android:background="@drawable/downvote"
        android:layout_below="@+id/upvote_simple"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/wall_status_votes_simple"
        android:text="Votes"
        android:textColor="#000000"
        android:textSize="20dp"
        android:drawableLeft="@drawable/points"
        android:layout_below="@+id/wall_status_text_simple"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/wall_status_comment_simple"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:id="@+id/wall_status_comment_simple"
        android:text="Comments"
        android:textColor="#000000"
        android:textSize="20dp"
        android:drawableLeft="@drawable/messages"
        android:layout_below="@+id/wall_status_text_simple"
        android:layout_alignEnd="@+id/downvote_simple"
        android:gravity="center_vertical" />

</RelativeLayout>